<%= form_for(:author, url: author_session_url) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    <%= f.submit "Log in" %>
  </div>
<% end %>
<ul>
  <li><%= link_to "Forgot your password?", new_password_path(Author) %></li>
  <li><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(Author) %></li>
  <li><%= link_to "Didn't receive unlock instructions?", new_unlock_path(Author) %></li>
  <li>Need an account?<%= link_to "Sign up here.", new_unlock_path(Author) %></li>
</ul>
