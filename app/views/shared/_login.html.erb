<%= form_for(:author, url: author_session_url) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    <%= f.submit "Log in" %>
  </div>
<% end %>
<%= link_to "Need help?", '#need-help', class: 'accordion-toggle', data: { toggle: 'collapse' } %>
<ul id="need-help" class="accordion-body collapse">
  <li><%= link_to "Forgot your password?", new_password_path(Author) %></li>
  <li><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(Author) %></li>
  <li><%= link_to "Didn't receive unlock instructions?", new_unlock_path(Author) %></li>
</ul>
