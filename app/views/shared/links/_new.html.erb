<%= form_for(:link, url: group_links_url(current_group.code)) do |f| %>
    <%= f.text_field :url, placeholder: 'Paste URL here', disabled: !current_group.can_submit %>
    <span class="upload-icon glyphicon glyphicon-<%= (current_group.can_submit ? 'download-alt' : 'lock') %>" aria-hidden="true"></span>
    <div class="progress hidden">
      <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%">
        <span class="sr-only">45% Complete</span>
      </div>
    </div>
<% end %>
